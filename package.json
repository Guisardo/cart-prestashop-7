{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint **/*.css --fix"
    ],
    "*.js": [
      "semistandard **/*.js --fix --verbose --env browser | snazzy"
    ],
    "*.php": [
      "bash cs-fixer.sh",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "10.4.0",
    "semistandard": "^14.2.3",
    "snazzy": "^8.0.0",
    "stylelint": "^13.7.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
