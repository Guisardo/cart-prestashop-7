{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint **/*.css --fix"
    ],
    "*.js": [
      "standard **/*.js --fix"
    ]
  },
  "devDependencies": {
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "standard": "^14.3.4",
    "stylelint": "^13.7.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
